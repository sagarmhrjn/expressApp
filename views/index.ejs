<% include partials/header.ejs %>
<h1>HELLO EJS IS WORKING</h1>
<hr>
<div class="container">
    <h3>
        <%= title %>
    </h3>
    <br>
    <table class="table table-striped">
        <tr>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Email</th>
        </tr>
        <% users.forEach(function(user){%>
        <tr>
            <td>
                <%= user.first_name %>
            </td>
            <td>
                <%= user.last_name %>
            </td>
            <td>
                <%= user.email %>
            </td>
        </tr>
        <%}) %>
    </table>
    <% if(errors){ %>
    <ul>
        <% errors.forEach(function(error){ %>
        <li>
            <%= error.msg %>
        </li>
        <% }) %>
    </ul>
    <% } %>
    <form action="/users/add/" method="POST">
        <div class="form-group">
            <label>Firstname:</label>
            <input type="text" class="form-control col-md-6" name="first_name"><br>
            <label>Lastname:</label>
            <input type="text" class="form-control col-md-6" name="last_name"><br>
            <label>Email:</label>
            <input type="email" class="form-control col-md-6" name="email"><br>
            <input type="submit" value="submit">
        </div>
    </form>
</div>
<% include partials/footer.ejs %>